{
  "name": "floer-soloer",
  "version": "1.0.0",
  "description": "Template for FloerSoloer, by FloerSoloer",
  "license": "ISC",
  "author": "FloerSoloer",
  "repository": "https://github.com/FloerSoloer/FloerSoloer",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": "^16.11.1"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "prettier --write --loglevel silent . && eslint --fix .",
    "prepare": "husky install",
    "serve": "yarn run build & yarn start",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "test": "jest",
    "build": "yarn run build:public && yarn run build:src",
    "build:public": "tsc -p public-ts",
    "build:src": "tsc -p src",
    "commit": "cz",
    "dev": "nodemon"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "node": "^16.11.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsc-files": "^1.1.3",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2",
    "yarn": "^1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "public"
    ],
    "ext": "ts,js,html,css",
    "exec": "node --loader ts-node/esm src/index.ts"
  }
}
